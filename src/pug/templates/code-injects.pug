mixin section_new()
    section.new
        h2.section-title Новинки
        each item in new_items
            +new_item(item)

mixin section_features()
    section.features
        ul.features__list
            each item in features_items
                li.features__item
                    h2.title= item.h2
                    p.text= item.p

mixin section_history()
    section.history
        h2.history__title Немного истории
        dl.history__list
            each item in history_item
                +history_item(item)

mixin section_news()
    section.news
        h2.section-title Пресса о нас
        blockquote.news__block
            each item in news__block
                p= item.text
                cite.news__author= item.author
                a.button(href="#") Читать далее

mixin section_range()
    section.range
        h2.section-title Ассортимент
        table.range__table
            thead
                tr
                    each item in th_table
                        th= item
            tbody
                each item in catalog
                    + cat_item(item)

mixin section_order()
    section.order
        h2.section-title Заказать
        p.order__text Не ждите пока нас отрекламируют, как Вятский квас, и мы поднимем цены! Закажите настоящий крафтовый квас сейчас. При заказе от 10 баррелей — скидка 10%.
        form(action="#" method="POST").order__form
            +form_el('fullName', 'Представьтесь:')
            +form_el('phone', 'Номер телефона:')
            +form_el('phone-2', 'Доп. номер:')
            +form_el('Email', 'Email:')
            +form_select('size-order', 'Объём заказа:')
            +form_textarea('message','Доп. комментарий:')
            +form_checkbox('send', 'Я согласен получать квасную рассылку')
            input.btn(type="submit" name="order-push" value="Отправить заказ")