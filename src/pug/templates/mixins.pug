mixin img(img, alt)
    img(src=`img/${img}`, alt= alt)

mixin list(list, classList)
    ul(class= classList)
        each item in list
            li: a(href=item.url)= item.title

mixin cat_item(item)
    tr
        td= item.title
        td= `&gt; ${item.alc}%` // '&gt; ' + item.alc + '%'
        td= item.cal
        td= `${item.ob} мл`
        td= item.sum + 'Р.'

mixin form_el(id, holder)
    .order-form-group
        label(for= id)= holder
        input(type="text" name= id id= id)